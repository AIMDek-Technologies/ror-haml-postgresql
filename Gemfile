source 'http://rubygems.org'
ruby '2.0.0'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.1.8'
# Use postgresql as the database for Active Record
gem 'pg'
# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.3'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'
# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# gem 'therubyracer',  platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails'
# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'
# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.0'
# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', '~> 0.4.0',          group: :doc

# Use ActiveModel has_secure_password
gem 'bcrypt', '~> 3.1.7'

# Use unicorn as the app server
# gem 'unicorn'

# Use Capistrano for deployment
# gem 'capistrano-rails', group: :development

# Use debugger
# gem 'debugger', group: [:development, :test]

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', platforms: [:mingw, :mswin]

# Use Haml as a templating library
gem 'haml-rails', '~> 0.8.0'

gem 'rspec-rails', :group => [:development, :test]
group :test do
  gem 'guard-rspec'
  gem 'factory_girl_rails'
  gem 'capybara'
  # to run the guard-spec on windows platform
  gem 'wdm', '>= 0.1.0' if Gem.win_platform?
  gem 'database_cleaner'
end

# Using for Internationalization
gem 'rails-i18n'

# Using Twitter Bootstrap
gem 'twitter-bootstrap-rails', '~> 3.2.0'

# for pagination
gem 'will_paginate-bootstrap'

# For date-picker
gem 'bootstrap-datepicker-rails'

# to add full text search on postgres database table
gem 'pg_search'

# Using Amazon S3 to store the documents and images
gem 'aws-sdk-v1'
gem 'aws-sdk', '~> 2'

# Using Rufus-Scheduler to run the cron-jobs
gem 'rufus-scheduler'

# Using to generate PDF documents
gem 'prawn'
gem 'prawn-table'

# Using to mask the user input
gem 'jquery-inputmask-rails', '~> 2.5.5'

# Using Roo to read xls files in bulk uploads
gem 'roo', '2.0.0beta1'
gem 'roo-xls'

gem 'coffee-script-source'